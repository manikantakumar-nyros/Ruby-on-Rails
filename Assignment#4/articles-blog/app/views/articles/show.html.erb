<div class=container>
  <div class="card col-md-6 offset-md-3">
    <div class="btn btn-primary btn-sm">Article Details</div>
    <div class="card-body">
      <p class="card-text">
	     <strong>Name:</strong>
	     <%= @article.name %>
      </p>
  
     <p class="card-text">
       <strong>Description:</strong>
       <%= @article.description %>
     </p>

     <p class="card-text">
        <strong>Published:</strong>
        <%= @article.published? ? 'yes' : 'no' %>
     </p>

     <p class="card-text">
        <strong>Categories:</strong>
        <%= @article.category %>
      </p>
     <p class="card-text">
        <strong>Categories:</strong>
      <%= image_tag @article.image.url(:original), :class=> "img-fluid" %>
    </p>
     <%= link_to 'Back', articles_path, :class => "btn btn-secondary" %>
     <%= link_to 'Edit', edit_article_path(@article), :class => "btn btn-warning" %>
    </div>
</div>